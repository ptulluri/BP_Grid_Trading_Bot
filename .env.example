# Backpack Grid Trading Bot - Environment Variables
# Copy this file to .env and fill in your actual values

# ============================================================================
# EXCHANGE API CREDENTIALS
# ============================================================================
# Your Backpack Exchange API credentials
# Get these from: https://backpack.exchange/settings/api
EXCHANGE_API_KEY=your_base64_encoded_public_key_here
EXCHANGE_SECRET_KEY=your_base64_encoded_private_key_here

# Exchange base URL (change for testnet)
EXCHANGE_BASE_URL=https://api.backpack.exchange
# For testnet: https://api.testnet.backpack.exchange

# ============================================================================
# TELEGRAM NOTIFICATIONS
# ============================================================================
# Telegram Bot Configuration
# See docs/TELEGRAM_SETUP.md for setup instructions
TELEGRAM_ENABLED=false
TELEGRAM_BOT_TOKEN=123456789:ABCdefGHIjklMNOpqrsTUVwxyz
TELEGRAM_CHAT_ID=123456789

# ============================================================================
# EMAIL NOTIFICATIONS
# ============================================================================
# Email Alert Configuration (Optional)
EMAIL_ENABLED=false
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SENDER_EMAIL=your_email@gmail.com
SENDER_PASSWORD=your_app_password_here
RECIPIENT_EMAIL=your_email@gmail.com

# ============================================================================
# APPRISE NOTIFICATIONS (Optional)
# ============================================================================
# Unified notification URLs for multiple services
# Format: service://credentials
# Examples:
#   - Telegram: tgram://bottoken/ChatID
#   - Discord: discord://webhook_id/webhook_token
#   - Slack: slack://TokenA/TokenB/TokenC
# See: https://github.com/caronc/apprise
APPRISE_NOTIFICATION_URLS=

# ============================================================================
# MONITORING & LOGGING
# ============================================================================
# Grafana Configuration (for Docker Compose monitoring stack)
GRAFANA_ENABLED=false
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=your_secure_password_here
GRAFANA_PORT=3000

# Loki Configuration
LOKI_PORT=3100

# Promtail Configuration
PROMTAIL_PORT=9080

# ============================================================================
# APPLICATION SETTINGS
# ============================================================================
# Environment: development, staging, production
ENVIRONMENT=development

# Logging Level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Log to file
LOG_TO_FILE=true
LOG_FILE_PATH=logs/grid_bot.log

# ============================================================================
# TRADING SETTINGS (Optional - can override config.json)
# ============================================================================
# Trading mode: backtest, paper, live
# TRADING_MODE=paper

# Symbol to trade
# TRADING_SYMBOL=SOL_USDC

# Initial balance for backtesting/paper trading
# INITIAL_BALANCE=10000

# ============================================================================
# RISK MANAGEMENT (Optional - can override config.json)
# ============================================================================
# Maximum drawdown percentage (0.05 = 5%)
# MAX_DRAWDOWN=0.05

# Volatility pause threshold (ATR percentage)
# ATR_THRESHOLD=2.0

# ============================================================================
# PERFORMANCE & OPTIMIZATION
# ============================================================================
# Enable performance profiling
ENABLE_PROFILING=false

# WebSocket connection timeout (seconds)
WS_TIMEOUT=30

# API request timeout (seconds)
API_TIMEOUT=10

# Maximum retry attempts for failed requests
MAX_RETRIES=3

# ============================================================================
# SECURITY
# ============================================================================
# Enable IP whitelist checking (if supported by exchange)
IP_WHITELIST_ENABLED=false

# Allowed IP addresses (comma-separated)
# ALLOWED_IPS=192.168.1.100,192.168.1.101

# ============================================================================
# DEVELOPMENT & DEBUGGING
# ============================================================================
# Enable debug mode (more verbose logging)
DEBUG_MODE=false

# Enable dry-run mode (no real orders)
DRY_RUN=false

# Save performance results to file
SAVE_PERFORMANCE_RESULTS=false
PERFORMANCE_RESULTS_PATH=results/performance.json

# ============================================================================
# NOTES
# ============================================================================
# - Never commit the .env file to version control
# - Keep your API keys and secrets secure
# - Use strong passwords for Grafana and other services
# - For production, use environment-specific .env files
# - Rotate API keys regularly for security
